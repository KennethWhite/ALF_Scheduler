<Window x:Class="WPF_Application.SaveWhereDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="Save File" Height="120" Width="280" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Where would you like to save changes?" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="NewFileButton" Content="New File" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom" Width="75" Click="NewFileButton_Click"/>
        <Button Name="CurrentFileButton" Content="Current File" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Bottom" Width="75" Click="CurrentFileButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
