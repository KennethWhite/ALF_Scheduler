<Window x:Class="WPF_Application.Export"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="Export" Height="110" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Enter the number of months to export:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="Auto" Width="232"/>
        <TextBox Name="ExportMonths" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextWrapping="Wrap" TextAlignment="Center" Margin="10" Text="6" Height="20" Width="75"/>
        <Button Content="Export" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Height="20" Width="75" Click="Export_Click"/>
    </Grid>
</Window>
