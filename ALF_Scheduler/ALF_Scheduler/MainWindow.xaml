<Window x:Class="ALF_Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALF_Scheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Assisted Living Facilities" HorizontalAlignment="Left" Margin="80,38,0,350" Width="241" Height="31" FontSize="16"/>
        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Height="20" Margin="511,46,0,0" TextWrapping="Wrap" Text="Search a Facility" VerticalAlignment="Top" Width="99" Opacity="0.5"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="628,46,0,0" VerticalAlignment="Top" Width="75" Click="SearchButton_Click"/>
        <TabControl HorizontalAlignment="Left" Height="283" Margin="80,90,0,0" VerticalAlignment="Top" Width="629">
            <TabItem Header="Facilities" IsSelected="True">
                <ListView Name="FacilityList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="180" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Most Recent Inspection" Width="160" DisplayMemberBinding="{Binding MostRecentFullInspection}"/>
                            <GridViewColumn Header="Schedule Interval" Width="120" DisplayMemberBinding="{Binding ScheduleInterval}"/>
                            <GridViewColumn Header="Proposed Date" Width="158" DisplayMemberBinding="{Binding ProposedDate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Details">
                <ListBox HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" ClipToBounds="True" >
                    <ListBoxItem Content="Facility Name" />
                    <ListBoxItem Content="License Number" />
                    <ListBoxItem Content="Address" />
                    <ListBoxItem Content="Name of Licensee" />
                    <ListBoxItem Content="Current Full Inspection Results (NO, NO24, ENF, YES)" />
                    <ListBoxItem Content="Dates of SOD  for substantiated complaints done since the last full inspection" />
                    <ListBoxItem Content="Enforcement for any inspection done since the last full inspection (fines, stop placement, conditions, revocation, summary suspension)" />
                    <ListBoxItem Content="Most Recent Inspection Date (with any affiliated enforcement)" />
                    <ListBoxItem Content="One Year Inspection Date (with any affiliated enforcement)" />
                    <ListBoxItem Content="Two Year Inspection Date (with any affiliated enforcement)" />
                    <ListBoxItem Content="Failed Follow Ups" />
                    <ListBoxItem Content="Complaints" />
                    <ListBoxItem Content="Special Information" />
                </ListBox>
            </TabItem>
            <TabItem Header="Calendar" ClipToBounds="True">
                <Calendar HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
